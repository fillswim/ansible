// ===================================================
//                      Kafka Logs
// ===================================================

local.file_match "kafka_logs" {
	path_targets = [
		{
			"__path__" = "{{ kafka_logs_folder }}/*.log",
		},
	]
}

loki.source.file "kafka_scrape" {
	targets    = local.file_match.kafka_logs.targets
	forward_to = [loki.process.add_labels.receiver]
}