//                   Write Loki
// ===================================================

loki.write "loki_endpoint" {
	endpoint {
		url     = "https://loki.fillswim.local/loki/api/v1/push"
		headers = {
			"X-Scope-OrgID" = "fillswim",
		}

		tls_config {
			insecure_skip_verify = true
		}
	}
	external_labels = {
		env = "test",
		app = "angie",
	}
}

